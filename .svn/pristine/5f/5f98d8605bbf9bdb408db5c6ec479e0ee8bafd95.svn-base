            // $("input[type='radio']").disabled=true;

            if (k<1) {
                layer.msg("当前页是第一页");
            }
        }

        function aaa(){
           document.getElementById("answerOver").click();

           function connectWebViewJavascriptBridge(callback) {
                if (window.WebViewJavascriptBridge) {
                    callback(WebViewJavascriptBridge)
                } else {
                    document.addEventListener('WebViewJavascriptBridgeReady', function() {
                        callback(WebViewJavascriptBridge)
                    }, false)
                }
            }
            connectWebViewJavascriptBridge(function(bridge) {
                bridge.init(function(message, responseCallback) {
                });

                var data = 'finish';
                bridge.send(data);
            });
        }

        function done(count){
            var taskid=$("#taskid").val();
            var userid=$("#userid").val();
            var inpschecked = $("input[name='inps"+count+"']:checked");
            var answerInput="";
    
            if(inpschecked.length==1){
                answerInput=inpschecked.val();
            }else{
                inpschecked.each(function(){
                    if (answerInput ==""){
                        answerInput += $(this).val();
                    }else{
                        answerInput += "," + $(this).val();
                    }
                });
            }
            
            $.post(APP+"/Mobileweb/Events/userChoices",
            "taskid="+taskid+"&answerInput="+answerInput+"&serial="+count+"&userid="+userid,
            function(val){
                    // console.log(val);
            },'json');
            
            $.post(APP+"/Mobileweb/Events/doneSure","taskid="+taskid+"&userid="+userid+"&count="+count,
            function(data){
                layer.open({
                    title: '答案对比',
                    type: 2,
                    area: ['100%', '100%'],
                    content: APP + '/Mobileweb/Events/answerCompare?taskid='+taskid+'&userid='+userid+'&goldCount='+data
                });
                // layer.msg("您获得"+data+"个金币！");
                setTimeout('aaa()',7000);
            },"json");
            
        }
