<include file="Public/head" title="" />
<style type="text/css">

</style>
<body>

     <div class="add">
        <div class='info' style="background-color:white;    height: 160px;">
            <br>
            <input type="hidden" id="taskid" name="taskid" value="{$reModi.list.f_tid}">

            <div class="line_input">
                <span>任务原先结束时间：</span> 
                <input id="startdate" class="laydate-icon" style="width: 120px;" value="{$reModi.list.f_enddate}" readonly>
                <input id="time" type="hidden" value="{$reModi.list.f_enddate}" readonly>
            </div><br>

            <div class="line_input">
                <span>任务新结束时间：</span> &nbsp;&nbsp;&nbsp;
                <input id="newenddate" class="laydate-icon" style="width: 120px;" value="{$reModi.list.f_enddate}">
            </div>

            <a class="btn btn-default" href="#" role="button" id="delayBtn" style="  margin:30px 0 0px 230px;">确定</a>
        </div>
    </div>


</body>
<include file="Public/loadjs" />
<script>
    sublevel_out();//子窗口退出

    var start = {
        elem: '#newenddate',
        format: 'YYYY-MM-DD',
        min: $("#time").val(), //设定最小日期为当前日期
        max: '2099-06-16', //最大日期
        //istime: true,
        istoday: false,
    };
    laydate(start);

</script>