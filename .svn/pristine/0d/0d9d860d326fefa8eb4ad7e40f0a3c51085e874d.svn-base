<include file="Public/loadjs" />
<script>
    sublevel_out();//子窗口退出
    $("#noteBtn").click(function(){
        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
        var uninstall=0;//卸载
        $('input[name="uninstall"]').each(function(){
            //console.log($(this).prop("checked"));
            if($(this).prop("checked")){
                uninstall = 1;
            }else{
                uninstall = 0;
            }
        });
        var ditch = $('input[name="ditch"]:checked').val();//渠道
        var industry = $('#industry').val();//行业
        var job = $('input[name="job"]:checked').val();//岗位
        var task = 0;//任务
        $('input[name="task"]').each(function(){
            //console.log($(this).prop("checked"));
            if($(this).prop("checked")){
                task = 1;
            }else{
                task = 0;
            }
        });
        var area = $('#area').val();//区域

        var remark=$('#remark').val();//备注

        //添加原因
        $.post("{:U('Fun/addsalecause')}","uninstall="+uninstall+"&ditch="+ditch+"&industry="+industry+"&job="+job+"&task="+task+"&area="+area+"&remark="+remark+"&id={$saleId}",function(v){
            console.log(v);
            layer.msg("添加原因成功");
            setTimeout(function(){
                parent.layer.close(index);
            }, 2000);
            //parent.layer.close(index);
        });
        //console.log(uninstall+ditch+industry+job+task+area);
    });

</script>