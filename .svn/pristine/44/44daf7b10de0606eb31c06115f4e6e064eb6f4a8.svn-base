<include file="Public/footer" title="杭州利伊享" />
<script>
    $(function(){
        $(".company_nav .nav_one").click(function(e) {
            $(this).addClass("currs").siblings().removeClass("currs");
            $("html,body").animate({scrollTop:$(".company_con").offset().top},500)});
    })
    $(function(){
        $(".company_nav .nav_two").click(function(e) {
            $(this).addClass("currs").siblings().removeClass("currs");
            $("html,body").animate({scrollTop:$(".company_cons").offset().top},500)});
    })
    $(function(){
        $(".company_nav .nav_three").click(function(e) {
            $(this).addClass("currs").siblings().removeClass("currs");
            $("html,body").animate({scrollTop:$(".company_set").offset().top},500)});
    })
    $(function(){
        $(".company_nav .nav_four").click(function(e) {
            $(this).addClass("currs").siblings().removeClass("currs");
            $("html,body").animate({scrollTop:$(".company_footer").offset().top},500)});
    })
</script>