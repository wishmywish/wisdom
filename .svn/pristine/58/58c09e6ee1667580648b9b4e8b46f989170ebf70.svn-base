  //经销商下的业务员
  function   showbusman(userid){
    console.log(userid);
      $.post(APP+"/Api/Web/getUser","userid="+userid,function(rel){
         sex=rel.list.sex=="1"?"女":"男";
         layer.open({
         type: 1,
