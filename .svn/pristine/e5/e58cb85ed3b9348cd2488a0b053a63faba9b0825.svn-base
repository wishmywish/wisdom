    function dealer(){
        // $re=M('dealerbaseinfo')->distinct(true)->field('f_dealer_strats')->order('f_dealer_strats')->select();
        for ($i=0; $i <4; $i++) {
            $re_1[$i]["count"]=M('dealerbaseinfo')->where("f_dealer_strats=".$i)->count('f_dealerid');
            if(0==$i){
                $re_1[$i]["color"]="#DC143C";
                $re_1[$i]["text"]="待审核";
            }elseif (1==$i) {
                $re_1[$i]["color"]="#FFA500";
                $re_1[$i]["text"]="已通过";
            }elseif (2==$i) {
                $re_1[$i]["color"]="#B8860B";
                $re_1[$i]["text"]="没通过";
            }elseif (3==$i) {
                $re_1[$i]["color"]="#7FFFD4";
                $re_1[$i]["text"]="提交厂商";
            }
        }
        return $re_1;
    }

    function company(){
        for ($i=0; $i <5 ; $i++) { 
            $re = A('Api/Jhttp')->getAllCompanyInfo(0,0,$i);
            $arr = json_decode($re,true);
            $re_2[$i]["count"] = $arr['count'];
            if(0==$i){
                $re_2[$i]["color"]="#DC143C";
                $re_2[$i]["text"]="未通过";
            }elseif (1==$i) {
                $re_2[$i]["color"]="#FFA500";
                $re_2[$i]["text"]="已审核";
            }elseif (2==$i) {
                $re_2[$i]["color"]="#B8860B";
                $re_2[$i]["text"]="未开通招商";
            }elseif (3==$i) {
                $re_2[$i]["color"]="#7FFFD4";
                $re_2[$i]["text"]="已停用";
            }elseif (4==$i) {
                $re_2[$i]["color"]="#008B8B";
                $re_2[$i]["text"]="待审核";
            }
        }
        return $re_2;
    }

    public function main(){
        set_theme();
        A("Taskadmin/Fun")->islogin();//判断是否已经登录
        $dealer=$this->dealer();
        $company=$this->company();
        $f_tasktypeid=I('f_tasktypeid');
        $map['f_tasktypeid']=empty($f_tasktypeid)?array('in','2,4,5,6'):$f_tasktypeid;
        for ($i=0; $i <12 ; $i++) {
            $map['f_status']=$i;
            $task[$i]["count"]=M('task')->where($map)->count('f_tid');
            if(0==$i){
                $task[$i]["color"]="#DC143C";
                $task[$i]["text"]="已删除";
            }elseif (1==$i) {
                $task[$i]["color"]="#FFA500";
                $task[$i]["text"]="已结束";
            }elseif (2==$i) {
                $task[$i]["color"]="#B8860B";
                $task[$i]["text"]="待客服审核";
            }elseif (3==$i) {
                $task[$i]["color"]="#7FFFD4";
                $task[$i]["text"]="已发布";
            }elseif (4==$i) {
                $task[$i]["color"]="#008B8B";
                $task[$i]["text"]="已过期";
            }elseif (5==$i) {
                $task[$i]["color"]="#483D8B";
                $task[$i]["text"]="已驳回";
            }elseif (6==$i) {
                $task[$i]["color"]="#EE82EE";
                $task[$i]["text"]="待提交";
            }elseif (7==$i) {
                $task[$i]["color"]="#FFDAB9";
                $task[$i]["text"]="待财务审核";
            }elseif (8==$i) {
                $task[$i]["color"]="#228B22";
                $task[$i]["text"]="客服通过";
            }elseif (9==$i) {
                $task[$i]["color"]="#000000";
                $task[$i]["text"]="审核通过";
            }elseif (10==$i) {
                $task[$i]["color"]="#FF7F50";
                $task[$i]["text"]="审核未通过";
            }elseif (11==$i) {
                $task[$i]["color"]="#1E90FF";
                $task[$i]["text"]="已下架";
            }
        }
        $this->assign('f_tasktypeid', $f_tasktypeid);
        $this->assign('dealer', $dealer);
        $this->assign('company', $company);
        $this->assign('task', $task);
        $this->display();
    }

