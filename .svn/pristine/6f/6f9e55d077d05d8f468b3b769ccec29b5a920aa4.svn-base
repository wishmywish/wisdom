    function doClear() {
        $("#searchSubject").val("");
        $("#searchBoard").val("");
    }

    function doSearch() {
        $("#currentPage").val("1");
        $("#hidSearchSubject").val($("#searchSubject").val());
        $("#hidSearchBoard").val($("#searchBoard").val());
        getmessageList();
    }



    //新增消息
    function addMessage(){
        layer.open({
