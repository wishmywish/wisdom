<include file="Public/foot" />
<script>
    $(function(){
        showshoplist(0,0);
    });

    //显示加载器
    function showLoader() {
        //显示加载器.for jQuery Mobile 1.2.0
        $.mobile.loading('show', {
            text: '加载中...', //加载器中显示的文字
            textVisible: true, //是否显示文字
            theme: 'e',        //加载器主题样式a-e
            textonly: false,   //是否只显示文字
            html: ""           //要显示的html内容，如图片等
        });
    }

    //隐藏加载器.for jQuery Mobile 1.2.0
    function hideLoader()
    {
        //隐藏加载器
        $.mobile.loading('hide');
    }

    $(".cselect").click(function(){
        $.getJSON("{:U('showcname')}",function(v){
            $('.classlist').empty();
            var list="";
            $.each(v,function(i,val){
                list +="<ul>";
                list +="<a href='#pageone'><li class='classstyle' onclick='showshoplist("+val.f_id+",\""+val.f_classname+"\");'>"+val.f_classname+"</li></a>";
                list +="</ul>";
            });
            $('.classlist').append(list);
        });
    });
    //获取商品列表
    function showshoplist(cid,cname){
        if(cname!==0){
            $(".cname").html(cname+">>");
        }
        showLoader();
        $.getJSON("{:U('showshop')}","cid="+cid,function(v){
            //console.log(v);
            $(".shoplist").empty();
            var list = "";
            $.each(v,function(i,val){
                list += "<a href='#pagetwo' data-transition='slide' onclick='openN("+val.f_sid+")'>";
                list += "<div class='shopframe'>";
                list += "<div class='img'><img src='"+UPFILE+"/"+val.f_filepath+val.f_filename+"'></div>";
                list += "<div class='text'>";
                list += "<div class='shopname'>"+val.f_shopname+"</div>";
                list += "<div class='shopdesc'>"+val.f_description+"</div>";
                list += "<div class='shopprice'><span style='color:red;font-size: 18px;'>"+val.f_price+"</span>金币</div>";
                list += "</div>";
                list += "</div>";
                list += "</a>";
            });
            $(".shoplist").append(list);
            hideLoader();
        });
    }

    //加载详情
    function openN(sid){
        showLoader();
        $.getJSON("{:U('showshopN')}","sid="+sid,function(v){
            $("#shopprice").html(v.f_price);
            $(".shopNsum").html("剩余:"+v.f_shopsum);
            $(".shoptitle").html(v.f_shopname);
            $(".shopN").html(v.f_note);
            $("#order a").attr("onclick","placerder("+sid+")");
            hideLoader();
        });
    }

    function placerder(sid){
        //$re = M("shoplist")->where("f_sid=".sid)
        //alert("{$userid}");
        $.getJSON("{:U('order')}","sid="+sid+"&userid={$userid}",function(v){
            console.log(v);
            $("#title").html(v.title);
        });
    }

    $("#ordertrue").click(function(){
        alert("完善中...");
    });

</script>