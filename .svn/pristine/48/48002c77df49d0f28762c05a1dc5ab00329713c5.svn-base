<include file="Public/admin_head" title="杭州利伊享" />
<include file="Public/admin_menu" />
<div class="body_right">
        <div class="body_right_menu">
            <div class="button_bg_80  button2" style="background-color:#eeeeee;color:#000" onclick="location.href = APP+'/Admin/Access/index'">角色管理</div>
            <div class="button_bg_80  button2"    onclick="location.href = APP+'/Admin/Access/user_list'">用户管理</div>
        </div>
        <div class="body_right_list">
            <div class="body_right_list_button">
                <!-- <div class="button_bg_80" style="float: right;margin-right: 5px;" onclick="addrole()">新建角色</div> -->
            </div>
            <div class="body_right_list_tab1">
                <ul>
                    <li>id</li>
                    <li>用户名称</li>
                    <li>操作</li>
                </ul>
            </div>
            <div class="body_right_list_tab2">               
                <foreach name="user_list" key="key" item="vo">
                <ul>                  
                    <li>{$page_start+$key+1}</li>                    
                    <li>{$vo['mobile']}</li>
                    <li onclick="addPower({$vo['userId']})"><span>授权</span></li>                   
                </ul>  
                </foreach>            
            </div>
            <div id="pagerolelist">            	
          		<span>共{$total}条</span>
				<span>每页{$pageSize}条</span>
				<span>{$page+1}/{$pageTotal}</span>
				<span><a href="{:U('Access/user_list')}">首页</a></span>				
				<span><a href="{:U('Access/user_list',array('page'=>$prePage))}">上一页</a></span>
				<span><a href="{:U('Access/user_list',array('page'=>$nextPage))}">下一页</a></span>
				<span><a href="{:U('Access/user_list',array('page'=>$pageTotal-1))}">尾页</a></span>
            </div>
        </div> 
    </div>
    <script>
       function addPower(userId){
           layer.open({
                type: 2,
                title :['用户授权','color:#506390;font-size: 16px;height: 45px;line-height: 45px;'],
                area: ['480px', '330px'],
                shadeClose: false, //点击遮罩关闭
                content:APP+'/Admin/Access/addPower?userId='+userId 
            });
       }
    </script>
    </body>
</html>
