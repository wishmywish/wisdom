<script>
    $("#submit").click(function(){
        var mobile = $("#mobile").val();
        var password = $("#password").val();
        var param = "mobile="+mobile+"&password="+password;
        $.post("{:U('zslogin')}",param,function(v){
//            console.log(v);
            if(v.error_code==="000000"){
                layer.msg(v.error_text,{icon: 6,offset: 25, time: 2000},
                        function(){
                            location.href = "{:U('pointsMall')}?mobile="+mobile+"&userid="+ v.ulist.userId
                        }
                );
            }else{
                layer.msg(v.error_text,{icon: 5,offset: 25, time: 2000});
            }
        },'json');
    });
</script>
