    //获取验证码
    $("#getcode").on("tap",function(){
        var phone = $("#phone").val();
        if(phone===""){
            alert("手机号不能为空");
            return false;
        }else {
            $.getJSON(APP + "/Api/Info/conf", "command=voicecode&voicephone=" + phone, function (val) {
                alert(val);
                if (val.error_code === "success") {
                    alert("验证码已发送");
                } else {
                    alert("验证码发送失败");
                }
            });
        }
    });

    //绑定
    $("#submit").on("tap",function(){
        var code = $("#vercode").val();
        var phone = $("#phone").val();
        var password=$("#password").val();
        var unionid=$("#unionid").val();
        if(phone===""){
            alert("手机号不能为空");
            return false;
        }
        if(password==""){
            alert("密码不能为空");
            return false;
        }
        if(code==""){
            alert("验证码不能为空");
            return false;
        }

//        alert(phone+"=="+password+"");

//        //发送绑定信息
         $.post(APP+"/Api/Info/conf","command=regist_bind&mobile="+phone+"&password="+password+"&unionid="+unionid,function(val){
//             alert("haha");
//             alert(val.error_code);
//             alert(val.userid+"==");
              if(val.error_code=="000000"){
                   alert(val.error_text);
                   location.href=APP+"/Mobileweb/Events/taskshare?userid="+val.userid;
              }
              if(val.error_code!="000000"){
                  alert(val.error_text+"，请联系客服");
              }
        },"json");

      });

</script>
