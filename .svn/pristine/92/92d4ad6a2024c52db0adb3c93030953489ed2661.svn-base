    function wechat_gguide(){
        set_theme();
        $inarr = I("get.");
        if(isset($inarr["f_pcid"])){
            $re = M("playcity")->where("f_pcid=".$inarr["f_pcid"])->find();
        }elseif(isset($inarr["code"])){
