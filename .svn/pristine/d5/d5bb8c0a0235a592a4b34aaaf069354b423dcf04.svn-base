    //编辑部门弹窗
    function editDepart(departId,departName,parentId){
    	layer.open({
		        type: 2,
		        title :['编辑部门','color:#506390;font-size: 16px;height: 45px;line-height: 45px;'],
		        area: ['480px', '330px'],
		        shadeClose: false, //点击遮罩关闭
