<script type="text/javascript">
        $('#authorityNum').keyup(function(event){
          var  authorityNum=$('input[name=authorityNum]').val();  
//          console.log(authorityNum);
          $.post(APP+"/Api/Web/isTrue","authorityNum="+authorityNum,function(v){
//                console.log(v);
              var newarray=new Array();
              var newphoneArray=new Array();
              var ishave="";
                if(v.result==='000000'){
                    var phone=v.detail.f_phoneone;
                    if(phone==""){
                        layer.msg("手机不存在,请联系客服人员");
                    }else{
                        newarray=phone.split("|");
                        for(var i=0;i<newarray.length;i++){
                               if((/^(0|86|17951)?(13[0-9]|15[012356789]|17[678]|18[0-9]|14[57])[0-9]{8}$/).test(newarray[i])){
                                   newphoneArray.push(newarray[i]);
                                   ishave="true";
                                   break;
                               }else{
                                   ishave="false";
                               }
                        }
                        console.log(newphoneArray);
                        console.log(newphoneArray[0]);
                        if(ishave=="true"){
                            $("#login_mobile").attr("value",newphoneArray[0]);
                            console.log(newphoneArray[0]);
                        }else{
                            $("#login_mobile").attr("value","");
                            layer.msg("手机号码不对或不存在，请联系客服人员");
                        }
                    }

                }
            },'json');
          });  

