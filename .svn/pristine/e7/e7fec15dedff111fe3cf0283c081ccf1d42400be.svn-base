        <!--<form id="favorable-form" class="wy-form" action="{:U('Events/activity')}" method="post" >-->
            <ul class="form">
                <li><img class="img" src="__IMG__/phone.png"><input data-role="none" type="text" placeholder="请输入手机号码" id="mobile" name="mobile" value=""></li>
